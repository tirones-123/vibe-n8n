# Clé API Claude (Anthropic) - OBLIGATOIRE
CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Token d'authentification pour le backend - OBLIGATOIRE
BACKEND_API_KEY=your-secret-backend-key-here-change-this-in-production

# === Configuration RAG (optionnel mais recommandé) ===

# Clé API OpenAI pour les embeddings
# Nécessaire uniquement pour générer les embeddings de la documentation n8n
# Si non définie, le RAG ne sera pas utilisé
OPENAI_API_KEY=sk-...

# Clé API Pinecone pour le stockage vectoriel
# Créez un compte gratuit sur https://www.pinecone.io/
# Le plan gratuit permet jusqu'à 100k vecteurs
PINECONE_API_KEY=...

# Port du serveur (optionnel, défaut: 3000)
PORT=3000

# Environnement (optionnel)
NODE_ENV=production 

# === MCP distant (optionnel) ===
# Active la connexion directe de Claude à un serveur MCP public ou privé.
# Si à "true", le backend ne lance plus n8n-mcp en local et transmet
# les paramètres `mcp_servers` à l'API Anthropic.
USE_REMOTE_MCP=true

# URL du serveur MCP (doit commencer par https://)
MCP_SERVER_URL=https://gitmcp.io/czlonkowski/n8n-mcp

# Nom interne utilisé pour identifier ce serveur (doit être unique côté Claude)
MCP_SERVER_NAME=n8n-docs

# Jeton d'autorisation si le serveur MCP l'exige (laisser vide sinon)
MCP_AUTH_TOKEN= 