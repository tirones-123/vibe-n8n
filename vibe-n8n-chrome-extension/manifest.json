{
  "manifest_version": 3,
  "name": "n8n AI Assistant - Claude",
  "version": "1.0.0",
  "description": "AI-powered workflow assistant for n8n using Claude 4 Sonnet",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://vibe-n8n.vercel.app/*",
    "https://*.n8n.io/*",
    "https://n8n.io/*",
    "https://*.n8n.cloud/*",
    "https://n8n.cloud/*",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.n8n.io/*",
        "https://n8n.io/*",
        "https://*.n8n.cloud/*",
        "https://n8n.cloud/*",
        "http://localhost:*/*",
        "https://localhost:*/*"
      ],
      "js": ["src/content.js"],
      "css": ["styles/panel.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 