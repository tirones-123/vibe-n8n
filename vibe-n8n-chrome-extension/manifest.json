{
  "manifest_version": 3,
  "name": "n8n AI Assistant - Claude + Pricing",
  "version": "2.0.0",
  "description": "AI-powered workflow assistant for n8n with Claude 4 Sonnet, Firebase Auth & Stripe Pricing",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self'",
    "offscreen": "script-src 'self' https://www.gstatic.com https://www.googleapis.com https://securetoken.googleapis.com https://apis.google.com https://identitytoolkit.googleapis.com https://vibe-n8n-production.up.railway.app; object-src 'self'; frame-src https://vibe-n8n-production.up.railway.app;"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage",
    "identity",
    "offscreen"
  ],
  "host_permissions": [
    "https://vibe-n8n-production.up.railway.app/*",
    "https://*.railway.app/*",
    "https://railway.app/*",
    "https://*.n8n.io/*",
    "https://n8n.io/*",
    "https://*.n8n.cloud/*",
    "https://n8n.cloud/*",
    "https://*.firebaseapp.com/*",
    "https://*.googleapis.com/*",
    "https://accounts.google.com/*",
    "https://securetoken.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://apis.google.com/*",
    "https://www.gstatic.com/*",
    "https://*.stripe.com/*",
    "https://checkout.stripe.com/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.n8n.io/*",
        "https://n8n.io/*",
        "https://*.n8n.cloud/*",
        "https://n8n.cloud/*"
      ],
      "js": [
        "src/config.js",
        "src/content-auth-integration-standalone.js",
        "src/content.js"
      ],
      "css": [
        "styles/panel.css",
        "styles/auth.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/inject.js",
        "src/config.js",
        "src/content-auth-integration-standalone.js",
        "offscreen.html",
        "offscreen.js",
        "libs/firebase/firebase-app.js",
        "libs/firebase/firebase-auth-web-extension.js"
      ],
      "matches": ["chrome-extension://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
} 